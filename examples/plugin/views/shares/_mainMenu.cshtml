@{
    var h = locals.helper;
    var menu = locals.helper.avril.getConfig('menu');
    var mainMenu = menu&&menu.mainMenu;
    var languages = locals.helper.avril.localize.languages;
}
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">@("Avril framework".localize(h))</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @for(var i =0; i<mainMenu.length;i++){
                    <li><a href="@mainMenu[i].url">@(mainMenu[i].text.localize(h)) </a></li>
                }
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@("language".localize(locals.helper
                    )) <b class="caret"></b></a>
                    <ul class="dropdown-menu" style="max-height:200px; overflow-y:scroll">
                        @for(var i=0;i<languages.length;i++){
                            <li><a href="@("?language="+languages[i].split('=')[0])">@(languages[i].split('=')[1])</a></li>                        
                        }
                    </ul>
                </li>
            </ul>
        </div>
        <!--/.nav-collapse -->
    </div>
</div>
